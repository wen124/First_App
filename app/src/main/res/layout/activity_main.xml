<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号登录"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/icon_hui"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/icon_phone"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="手机号/邮箱/会员名"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:background="@null"/>
    <View
        android:layout_width="460px"
        android:layout_height="1dp"
        android:background="#30000000"
        android:layout_below="@id/editText"
        android:layout_marginStart="250px"
        android:layout_marginLeft="250px" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/icon_mima"
        android:layout_below="@+id/imageView2"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="请输入登录密码"
        android:background="@null"
        android:layout_alignBottom="@+id/imageView3"
      android:layout_centerHorizontal="true" />

    <View
        android:layout_width="460px"
        android:layout_height="1dp"
        android:background="#30000000"
        android:layout_below="@+id/editText2"
        android:layout_marginStart="250px"
        android:layout_marginLeft="250px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:textColor="#ffc100"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码?"
        android:id="@+id/textView3"
        android:textSize="25dp"
        android:textColor="#ffc100"
        android:layout_alignTop="@+id/textView2"
       android:layout_marginStart="210dp"
        android:layout_marginLeft="210dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/button"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:backgroundTint="#ffc100"
        android:background="@drawable/button_s"/>

    <View
        android:layout_width="250px"
        android:layout_height="1dp"
        android:background="#30000000"
        android:layout_below="@id/button"
        android:layout_marginTop="50px"
        android:id="@+id/view2" />

    <View
        android:layout_width="250px"
        android:layout_height="1dp"
        android:background="#30000000"
        android:layout_below="@id/button"
        android:layout_marginTop="50px"
        android:layout_marginStart="700px"
        android:layout_marginLeft="700px"
        android:id="@+id/view" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/btn_weixin"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/btn_zfb"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/editText2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机快速登录"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#ffc100"
        android:backgroundTint="#ffffff"
        android:background="@drawable/button_s"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三方支付"
        android:id="@+id/textView4"
        android:layout_below="@+id/button"
      android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:textSize="35px"
        android:textColor="#83060500"/>

</RelativeLayout>
